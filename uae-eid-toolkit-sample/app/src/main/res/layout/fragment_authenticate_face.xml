<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorReadPublicDataBG"
        android:gravity="center"
        android:text="Please tap/insert your card in the reader to authenticate face"
        android:textColor="@color/colorReadPublicDataAccent"
        android:textSize="20dp"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Read Data"
        android:background="@drawable/normal_button_bg"
        android:textColor="@color/colorReadPublicDataAccent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btn_authenticate"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_authenticate_face_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp" />

</LinearLayout>
