<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_margin="8dp"
    android:padding="8dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Register Device"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/colorRegisterDeviceAccent"/>
        <TextView
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Username"
            android:textColor="@color/colorRegisterDeviceAccent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/back_edt_txt"
            android:padding="8dp"
            android:textSize="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="48dp"
            android:inputType="text"
            android:hint="username"
            android:textColor="@color/colorRegisterDeviceAccent"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Password"
            android:textColor="@color/colorRegisterDeviceAccent"            android:textSize="18dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/back_edt_txt"
            android:padding="8dp"
            android:textSize="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="48dp"
            android:inputType="textPassword"
            android:hint="password"
            android:textColor="@color/colorRegisterDeviceAccent"
            android:maxLines="1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Reference Id"
        android:textColor="@color/colorRegisterDeviceAccent"        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_deviceId"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/back_edt_txt"
        android:padding="8dp"
        android:textSize="16dp"
         android:layout_marginLeft="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="48dp"
        android:hint="reference id"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/colorRegisterDeviceAccent"
        />

<Button
    android:id="@+id/btn_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Register"
    android:textStyle="bold"
    android:background="@drawable/normal_button_bg"
    android:textColor="@color/colorRegisterDeviceAccent"    android:layout_gravity="center"
    android:layout_marginTop="16dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:textSize="20dp"
    />

</LinearLayout>